
<div class="container">
  <div class="text-center">
    <h1 class="d-inline title">Kirby's Burgers!</h1> <img class="kirbyTitle" src="https://media2.giphy.com/media/3ohhwMlj784k3GufHa/giphy.gif">
  </div>
  <div class="row">
    <div class="col-md-6 toBeEaten">
      <h2 class="text-center">Burgers not devoured!</h2>

      <ul class="mx-auto text-align-left">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6 eaten">
    <h2 class="text-center">Burgers devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
    </div>
  </div>
  <div class="burgerForm text-center mt-2 mx-auto pb-2">
    <h2 style="color:rgb(255,177,210)">Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name" required>
      </div>

      <button type="submit" class="btn btn-info">Add Burger</button>
    </form>
  </div>
</div>